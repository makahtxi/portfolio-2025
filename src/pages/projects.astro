---
import ProjectItem from "../components/ProjectItem.vue";
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.vue";
---

<BaseLayout title="Projects">
  <div class="w-full min-h-screen flex flex-col items-center pb-16">
    <div class="w-10/12 flex justify-center mt-24">
      <h1 class="w-full text-4xl font-semibold pt-6 pb-2 justify-start">
        Projects
      </h1>
    </div>
    <h2 class="w-10/12 text-xl font-semibold mt-4 pb-1 border-b-1 border-[#1e1e1e]">UX Case Studies</h2>
    <div class="w-10/12 m-0 flex justify-center mt-4">
      <div class="w-fit m-auto flex flex-row flex-wrap gap-4">
        <ProjectItem
          client:load
          name="ORBIT OVERTURE"
          href="/projects/orbit"
          tags="AI Music Maker Tool"
          img="/images/Thumbnails/Orbit.png"
          color="#FFFFFF"
        />
        <ProjectItem
          client:load
          name="A GAME"
          href="/projects/board-game"
          tags="Unlocking a social learning experience"
          img="/images/Thumbnails/Board Game.png"
          color="#232745"
        />
      </div>
    </div>
    <h2 class="w-10/12 text-xl font-semibold mt-12 pb-1 border-b-1 border-[#1e1e1e]">Other Projects</h2>
    <div class="w-10/12 m-0 flex justify-center mt-4">
      <div class="w-fit m-auto flex flex-row flex-wrap gap-4">
        <ProjectItem
          client:load
          name="UPLING"
          href="/projects/upling"
          tags="Guiding students to higher ed"
          img="/images/Thumbnails/Upling.png"
          color="#FFFFFF"
        />
        <ProjectItem
          client:load
          name="PASSPORT"
          href="/projects/passport"
          tags="Passport app (in the future)"
          img="/images/Thumbnails/Passport.png"
          color="#000000"
        />
        <ProjectItem
          client:load
          name="LAGOS"
          href="/projects/lagos"
          tags="Wayfinding and urban design"
          img="/images/Thumbnails/Lagos.png"
          color="#232745"
        />
      </div>
    </div>
    <h2 class="w-10/12 text-xl font-semibold mt-12 pb-1 border-b-1 border-[#1e1e1e]">
      Branding & Graphic Design
    </h2>
    <div class="w-10/12 m-0 flex justify-center mt-4">
      <div class="w-fit m-auto flex flex-row flex-wrap gap-4">
        <ProjectItem
          client:load
          name="BOATY"
          href="/projects/boaty"
          tags="Branding for artist"
          img="/images/Thumbnails/Boaty.png"
          color="#FF00F2"
        />
        <ProjectItem
          client:load
          name="Darty/MM Branding"
          href="/projects/fnac-campaigns"
          tags="eCommerce Campaigns"
          img="/images/Thumbnails/Darty.png"
          color="#232745"
        />
      </div>
    </div>
  </div>
</BaseLayout>
